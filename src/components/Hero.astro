<style>
  .openwork {
    background-color: rgb(32 73 30 / 0.5);
    display: inline-flex;
    align-items: center;
    justify-self: center;
    /* max-width: 12rem; */
    gap: 0.3rem;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 0.4rem;
    padding-bottom: 0.4rem;
    border-radius: 99999px;
    font-size: var(--fs-sm);
    cursor: pointer;
    transition:
      transform 200ms,
      background-color 200ms;
    color: var(--pastel-green-200);
    white-space: nowrap;
    margin-bottom: 1rem;
    &::before {
      --size: 10px;
      content: " ";
      display: inline-block;
      border-radius: 50%;

      width: var(--size);
      height: var(--size);
      background-color: var(--pastel-green-200);
      box-shadow: 0 0 5px var(--pastel-green-400);
    }

    &:hover {
      transform: scale(1.03);
      background-color: rgb(32 73 30 / 0.7);
    }
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    gap: 2rem;

    @media (width > 640px) {
      justify-content: space-between;
      flex-direction: row;
    }
  }

  .hero {
    max-width: 70ch;
  }

  h1 {
    font-size: var(--fs-xxl);
    font-weight: 700;
  }

  h2 {
    font-size: var(--fs-xl);
    font-weight: 400;

    margin-top: 0.5rem;


  }

  p {
    font-size: var(--fs-md);
    margin-top: 1rem;
    text-wrap-style: pretty;
    /* letter-spacing: 0.05rem; */
    line-height: 1.5rem;
    color: var(--foreground)
  }



  .container-social{
    display: flex;
    flex-direction: column;
  }
  
  .container-item{
    /* --size: 350px; */
    /* background-color: rgb(32, 41, 56); */


    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    
    /* width: var(--size); */
    /* height: 200px; */
    /* height: var(--size); */
    /* border: 1px solid red; */
    border-radius: 0.7rem;
    border: 2px solid rgb(32, 41, 56);;
    
    & h3{
      margin-bottom: 1rem;
    }
  }

  .icons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1rem;
    
    & > div:nth-child(1) {
      display: flex;
      flex-direction: row;
      gap: 0.7rem;
    }
    
    & > div:nth-child(2) {
      display: flex;
      flex-direction: row;
      gap: 0.5rem;
    }
  }

  span{
    font-size: var(--fs-sm );
    text-wrap: nowrap;
  }

  button{
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: var(--fs-sm);
    /* font-weight: 600; */
    padding-top: 0.6rem;
    padding-bottom: 0.6rem;
    border-radius: 0.3rem;

